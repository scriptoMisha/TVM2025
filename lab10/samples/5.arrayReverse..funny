rev(a: int[], b: int[], n: int)
  requires n>=0 and n < length(a) and length(b) == length(a)
  returns void
  ensures forall(k: int | (k>=0 and k<length(a)) -> (b[k] == a[length(a)-k]))
  uses t: int
{
    if(n == 1)        
        b[0] = a[0];
    if(n > 1)
    {                
        rev(a, b, n-2);
        b[n] = a[length(a)-n-1];
        b[length(a)-n-1]=a[n];
    }
}